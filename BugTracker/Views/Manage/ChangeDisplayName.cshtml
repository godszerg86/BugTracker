@model BugTracker.Models.ChangeDisplayNameModel
    @using BugTracker.Helpers

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Change your display name.</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="container">
        <div class="row">
            @using (Html.BeginForm("ChangeDisplayName", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                   <label for="old-dname" class="col-md-2 control-label">Current Display Name</label>
                    <div class="col-md-6">
                        <input disabled id="old-dname" class="form-control" value=@User.Identity.GetUserDsiplayName() >  
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.NewDisplayName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.NewDisplayName, new { @class = "form-control" })
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-8">
                        <input type="submit" value="Change" class="btn btn-default" />
                    </div>
                </div>
            }
        </div>
    </div>
