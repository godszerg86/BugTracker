@using BugTracker.Models.classes
@model UserListModel



<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Manage roles for @Model.DisplayName</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <h3>Assign user roles: (select multiply holding CTRL key)</h3>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ListBoxFor(m => m.SelectedRoles, Model.RolesList)
            @Html.HiddenFor(m => m.Id)
            <input type="submit" value="Change" />
        }

    </div>
</div>