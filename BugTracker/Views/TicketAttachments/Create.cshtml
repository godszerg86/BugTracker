@model int

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Add attachment to the ticket.</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->


    <div class="">
        <div class="row extra-pad">

            @using (Html.BeginForm("Create", "TicketAttachments", FormMethod.Post, new { @enctype = "multipart/form-data", id = "form-valid" }))
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">


                @Html.Hidden("TicketId", Model.ToString())
                @Html.Hidden("ProjectId")

                <div id="attch-field">
                    <fieldset id="my-fieldset">
                        <legend>Attachment</legend>
                        <div class="form-group file-form">
                            <label class="control-label col-md-2" for="FileBase">Choose a file</label>
                            <div class="col-md-10">
                                <input class="ticket-input form-control" type="file" name="FileBase" required />
                            </div>
                            <label class="control-label col-md-2" for="FileBase">File description</label>
                            <div class="col-md-10">
                                <input class="ticket-input form-control" type="text" name="FileDescription" required />
                            </div>
                            <div class="col-md-offset-2 col-md-10">
                                <a class="btn btn-danger" id="remove-btn">REMOVE</a>
                            </div>
                        </div>
                    </fieldset>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a class="btn btn-success" id="attch-btn">Add more</a>
                        <input type="submit" value="Upload" class="btn btn-default" id="ticket-sbmt" />
                    </div>
                </div>
            </div>
            }

            <div>
                @Html.ActionLink("Back to ticket", "Details", "Tickets", new { id = Model }, null)
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/fileUpload.js"></script>
}