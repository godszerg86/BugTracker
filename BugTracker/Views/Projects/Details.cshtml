@model BugTracker.Models.Project




<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Project "@Model.Name" details.</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="container">
        <div class="row">

            <h3>Author: @Model.Author.DisplayName</h3>
            <h3>Created on: @Model.Created.ToString("dd-MM-yyyy")</h3>
            @if (Model.Updated != null)

            {
                <h3>Last update: @Model.Updated</h3>
            }
            <h3>Project type: @Model.ProjectType.Type</h3>
            <hr />
            <h4>Description:</h4>
            <p>@Model.Description</p>
            <h4>Project opened tickets:</h4>
            <ul>
                @*@foreach (var ticket in Model)
                {

                }*@
            </ul>
            <p>
                @if (User.IsInRole("Project Manager") && User.Identity.IsAuthenticated)
                {

                    @Html.ActionLink("Edit", "Edit", new { id = Model.Id });
                }
                @Html.ActionLink("Back to List", "Index")
            </p>


        </div>
    </div>
</div>

