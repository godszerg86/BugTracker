@using BugTracker.Models.classes
@model AssignTicketToDeveloperModel




<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Assign a developer to ticket @Model.TicketTitle.</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="container">
        <div class="row ">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Ticket</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.TicketId)

                    <div class="form-group">
                        @Html.LabelFor(model => model.SelectedDev, "Developer:", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.DropDownList("DevList", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SelectedDev, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-6">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Back to project details", "Details","Projects", new { id = Model.ProjectId })
            </div>


        </div>
    </div>
</div>
